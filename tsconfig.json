{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"target": "ES2022",
		"moduleResolution": "Node10",
		"resolveJsonModule": true,
		"module": "CommonJS",
		"declaration": true,
		"isolatedModules": true,
		"noEmit": true,
		"outDir": "dist"
	},
	"include": ["src", "tests/index.test.ts"],
	"exclude": ["node_modules"]
}
